{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "scripts": {
    "build": "parcel src/index.html -p 3000"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
